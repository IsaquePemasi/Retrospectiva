<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsM1.CalculadoraSimples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calculadora Simples!"/>
            <Label Text="Valor A"/>
            <Entry x:Name="etNumero1" Keyboard="Numeric" Placeholder="Digite o primeiro número"/>
            <Label Text="Valor B"/>
            <Entry x:Name="etNumero2" Keyboard="Numeric" Placeholder="Digite o segundo número"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="+" Clicked="Button_Clicked"/>
                <Button Text="-" Clicked="Button_Clicked"/>
                <Button Text="/" Clicked="Button_Clicked"/>
                <Button Text="*" Clicked="Button_Clicked"/>
            </StackLayout>
            <Label x:Name="lbResposta"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>